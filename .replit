# Simple Replit configuration for Flupp Node.js backend
# No Nix dependencies - uses standard Replit Node.js environment

run = "cd backend/flupp && npm install && npm start"
modules = ["nodejs-20"]

[deployment]
run = ["sh", "-c", "cd backend/flupp && npm install && npm start"]

[env]
HOST = "0.0.0.0"
NODE_ENV = "development"
PORT = "8787"

[[ports]]
localPort = 8787
externalPort = 80

[languages]

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx,*.mjs}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"