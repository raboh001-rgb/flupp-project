# Replit configuration for Flupp backend
run = "cd backend/flupp && npm install && npm start"
modules = ["nodejs-20"]

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "cd backend/flupp && npm install && npm start"]

[env]
# Let Replit set PORT automatically, fallback to 3000
HOST = "0.0.0.0"
NODE_ENV = "production"

[[ports]]
localPort = 3000
externalPort = 80

# Alternative port configuration
[[ports]]
localPort = 8787
externalPort = 8787